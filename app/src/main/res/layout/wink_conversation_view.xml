<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#ffffffff"
    android:gravity="bottom">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:visibility="visible">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/winks_history_list_date"
                    android:padding="3dp"
                    android:text="123"
                    android:textColor="@color/matches_remark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/winks_history_list_text"
                    android:padding="3dp"
                    android:text="123"
                    android:textColor="@color/matches_remark" />
            </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mailbox_chat_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mailbox_history_wink_content"
            android:background="@drawable/mailbox_message_single"
            android:visibility="visible">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:id="@+id/accept_button"
                android:padding="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/mailbox_history_authorize_icon"
                    android:src="@drawable/ic_wink_new"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/mailbox_history_authorize_message"
                    android:paddingBottom="6dp"
                    android:paddingRight="13dp"
                    android:text="@string/mailbox_conversation_list_wink_accept"
                    android:paddingTop="6dp"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/mailbox_history_authorize_action"
                    android:visibility="gone">

                    <View
                        android:layout_width="0.2dp"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:background="@android:color/darker_gray"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_more"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mailbox_history_wink_content1"
            android:background="@drawable/mailbox_message_single"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:visibility="visible">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:id="@+id/ignore_button"
                android:padding="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/mailbox_history_authorize_icon1"
                    android:src="@drawable/ic_wink"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/mailbox_history_authorize_message1"
                    android:paddingBottom="6dp"
                    android:paddingRight="13dp"
                    android:text="@string/mailbox_conversation_list_wink_ignore"
                    android:paddingTop="6dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/mailbox_history_authorize_action1"
                    android:visibility="gone">

                    <View
                        android:layout_width="0.2dp"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:background="@android:color/darker_gray"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_more"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>





    </RelativeLayout>
</LinearLayout>