<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:visibility="visible"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/memberships_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:divider="@drawable/list_divider"
            android:layout_height="wrap_content"
            android:visibility="gone">
                <TextView
                    android:id="@+id/membership_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#87868E"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/membership_pack_label"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp" />

                <View
                    android:layout_height="2dp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/credits_label_divider_border" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/membership"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:divider="@drawable/list_divider"
                    android:layout_height="wrap_content">
                </LinearLayout>

                <TextView
                    android:id="@+id/membership_learn_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/memberships_and_credits_learn_more_color"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/subscribe_learn_more"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:gravity="right" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/credits_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:divider="@drawable/list_divider"
            android:layout_height="wrap_content"
            android:visibility="gone">

                <TextView
                    android:id="@+id/credits_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#87868E"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/credit_pack_label"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp" />

                <View
                    android:layout_height="2dp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/credits_label_divider_border"/>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/credit_pack"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:divider="@drawable/list_divider"
                    android:layout_height="wrap_content">
                </LinearLayout>

                <TextView
                    android:id="@+id/credits_learn_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/memberships_and_credits_learn_more_color"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/subscribe_learn_more"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:gravity="right" />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/no_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/no_content_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textAllCaps="false"
                android:visibility="visible"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/subscribe_no_subscribe_items"
                android:gravity="center" />

        </LinearLayout>
    </LinearLayout>




</LinearLayout>