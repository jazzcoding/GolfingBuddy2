<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:id="@+id/single_range"
    android:clickable="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/single_range_container"
        android:clickable="true"
        android:layout_gravity="center"
        android:layout_marginLeft="-15dp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" android:text="From"
            android:id="@+id/single_range_label"
            android:layout_gravity="center|left"
            android:layout_marginRight="10dp" />

        <NumberPicker android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:inputType="number" android:ems="10" android:id="@+id/single_range_input"
            android:layout_gravity="center_horizontal|top" />
    </LinearLayout>
</LinearLayout>